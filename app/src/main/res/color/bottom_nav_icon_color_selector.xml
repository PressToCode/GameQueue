<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Icon color when the item is checked (active) -->
    <item android:color="@color/light_blue" android:state_checked="true" />
    <!-- Icon color when the item is not checked (inactive) -->
    <item android:color="@color/black" android:state_checked="false"/>
    <!-- Default color (optional, often the same as inactive) -->
    <item android:color="@color/black" />
</selector>
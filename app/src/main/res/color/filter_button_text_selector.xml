<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is selected (active) -->
    <item android:state_selected="true"
        android:color="@android:color/white" /> <!-- Or your preferred active text color -->

    <!-- Default state (inactive) -->
    <item android:color="@color/black" /> <!-- Or your default text color for outlined buttons -->
</selector>